<!DOCTYPE html>
<html>
  <head>
    <title>Tus Cursos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true %>
  </head>

  <body>
    <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Mis Cursos</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/#">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Cursos</a>
            </li>
            <% if session[:usuario_id] %>
              <li class="nav-item">
              <%= button_to 'Cerrar sesión', logout_path, method: :delete, class: 'btn btn-danger', data: { confirm: '¿Estás seguro de que deseas cerrar sesión?' } %>

              </li>
              <li class="nav-item me-2"> <!-- Añadido me-2 para margen a la derecha -->
                <%= link_to 'Crear Curso', new_curso_path, class: 'btn btn-primary' %>
              </li>

            <% else %>
              <li class="nav-item">
                <%= link_to 'Iniciar Sesión', iniciar_sesion_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Registrarse', new_usuario_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>


    <div class="container mt-5">
      <%= yield %>
    </div>
  </body>
</html>

