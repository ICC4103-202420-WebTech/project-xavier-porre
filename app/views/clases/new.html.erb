<h1>Crear Clase</h1>

<%= form_with(model: [@curso, @clase], local: true) do |form| %>

  <% if @clase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clase.errors.count, "error") %> impidi√≥ que la clase se guardara:</h2>
      <ul>
        <% @clase.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion %>
  </div>

  <div class="actions">
    <%= form.submit "Crear Clase" %>
  </div>
<% end %>
