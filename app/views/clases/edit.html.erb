<h1>Editar Clase</h1>

<%= form_with(model: [@curso, @clase], local: true) do |form| %>
  <% if @clase.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errores:</h4>
      <ul>
        <% @clase.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :texto, "TÃ­tulo de la clase" %>
    <%= form.text_field :texto, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :contenido_rico, "Contenido de la clase" %>
    <%= form.rich_text_area :texto2, class: 'form-control' %>
  </div>

